@import "nib"
@import "rupture"
// @import "typographic"
@import "./_fonts.styl"
@import "./_colors.styl"


html, body
	margin 0
	padding 0
	box-sizing border-box
	
body
	font-family $font
	font-size 16px
	background-color $white
	
section
	padding-bottom 10vh
	box-shadow: 0 7px 10px darken($white, 50)
	
footer
	margin-top 50px

#main
	background-color $red
	color $white
	padding 30vh 0 20vh 0
	margin-bottom 100px

+above(992px)
	.flex
		display flex

		.vertical
			display flex
			flex-direction column
			align-items center
			justify-content center
			width 100%

#logo
	width 25px
	height auto

#search-pkmn-submit
	+above(992px)
		text-align right

	+below(767px)
		margin-top 30px

#main-results
	color $dark
	text-align left

	#results p
		font-size 14px

.info-text
	font-size 11px
	color $white
	display block
	text-align center
	margin-top 5px
	font-style italic

.progress
	margin 0

.tiny
	font-size 11px


// PRINCIPAL
#principal
	padding-top 10vh
	
	+below(767px)
		background-image url('./../img/principal-background.jpg')
		background-repeat no-repeat
		background-size cover
		padding 0
		margin-top 100px
		
	+below(540px)
		background-image none
		
#principal-text
	+below(767px)
		background-color rgba(0,0,0,0.7)
		padding-top 50px
		color $white
		padding 50px 50px 50px 50px
	+below(424px)
		padding 20px 20px 0 20px
	
.principal-title
	color $white
	text-shadow 2px 2px darken($dark, 60)
	padding-bottom 50px
	font-size 36px
	
	+below(1023px)
		font-size 24px

#poster
	+above(1200px)
		max-height 400px
		width auto


// CAROUSEL
#carousel
	background-color $gray
	padding 50px 0 50px 0
	
	> *
		width 100% !important
	
.container-box
	padding 7vh 0 7vh 0
	
.container-box , .container-box-full
	border-radius 5px
	box-shadow: 5px 5px 5px darken($light, 10)
	
	> *
		transition transform 0.8s

.carousel-fade
	.carousel-control
		z-index 2
		background none
		
	.carousel-inner
		.active
			opacity 1
			
		.active.left, .active.right 
			left 0
			opacity 0
			z-index 1

		.next.left,	.prev.right
			opacity 1

		.item
			opacity 0
			transition-property opacity
			
			> img
				-webkit-filter blur(2px)
				width 100vw
				height auto
				margin 0 auto
			
			> .carousel-caption
				padding 100px
				height 100%
				width 100%
				background-color rgba(0,0,0,0.6)
				top 0
				left 0
				font-size 24px
				text-align left
				
				+below(1200px)
					font-size 20px
					
				+below(1023px)
					font-size 16px
				
				+below(864px)
					font-size 14px
					padding 70px
					
				+below(540px)
					font-size 11px
					padding 50px
					
				+below(320px)
					font-size 8px
					padding 30px 40px 10px 40px
				
				> :first-child
					font-weight bold
					
		.flex-controls
			display flex

			.vertical
				display flex
				flex-direction column
				align-items center
				justify-content center
				width 100%

@media all and (transform-3d), (-webkit-transform-3d) 
	
	.carousel-fade .carousel-inner >
		.item.next, .item.active.right
			opacity 0
			-webkit-transform translate3d(0, 0, 0)
			transform translate3d(0, 0, 0)

		.item.prev, .item.active.left 
			opacity 0
			-webkit-transform translate3d(0, 0, 0)
			transform translate3d(0, 0, 0)

		.item.next.left, .item.prev.right, .item.active 
			opacity 1
			-webkit-transform translate3d(0, 0, 0)
			transform translate3d(0, 0, 0)

// History
#legends
	padding 50px 0 100px 0
	background-color $white
	
	img
		box-shadow: 5px 7px 10px $lighter
		
	h2
		padding-bottom 50px
	
