@import "rupture"
// @import "typographic"
@import "./_fonts.styl"
@import "./_colors.styl"


html, body
	margin 0
	padding 0
	box-sizing border-box
	
body
	font-family $font
	font-size 16px
	background-color $gray

#main
	background-color $red
	color #fff
	padding 20vh 0 20vh 0

+above(992px)
	.flex
		display flex

		.vertical
			display flex
			flex-direction column
			align-items center
			justify-content center
			text-align right
			width 100%
			
+below(768px)
	#search-pkmn-submit
		margin-top 30px

#main-results
	color $dark
	text-align left

	#results p
		font-size 14px

.info-text
	font-size 11px
	color #fff
	display block
	text-align center
	margin-top 5px
	font-style italic

.progress
	margin 0

.tiny
	font-size 11px
	
.container-box
	padding 7vh
	
.container-box , .container-box-full
	background-color #fff
	border-radius 5px
	box-shadow: 5px 5px 5px darken($light, 20)
	
	> *
		transition transform 0.8s