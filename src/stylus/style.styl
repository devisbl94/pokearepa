@import "nib"
@import "rupture"
// @import "typographic"
@import "./_fonts.styl"
@import "./_colors.styl"


html, body
	margin 0
	padding 0
	box-sizing border-box
	
body
	font-family $font
	font-size 16px
	background-color $white
	
section
	padding-bottom 10vh
	box-shadow: 0 7px 10px darken($white, 50)

#main
	background-color $red
	color $white
	padding 30vh 0 20vh 0
	margin-bottom 100px

+above(992px)
	.flex
		display flex

		.vertical
			display flex
			flex-direction column
			align-items center
			justify-content center
			width 100%
			
#search-pkmn-submit
	+above(992px)
		text-align right

	+below(767px)
		margin-top 30px

#main-results
	color $dark
	text-align left

	#results p
		font-size 14px

.info-text
	font-size 11px
	color $white
	display block
	text-align center
	margin-top 5px
	font-style italic

.progress
	margin 0

.tiny
	font-size 11px


// PRINCIPAL
.principal-title
	color $white
	text-shadow 2px 2px darken($dark, 60)
	padding-bottom 50px

#poster
	+above(1200px)
		max-height 400px
		width auto


// CAROUSEL
#carousel
	background-color $gray
	padding 50px
	
.container-box
	padding 7vh
	
.container-box , .container-box-full
	border-radius 5px
	box-shadow: 5px 5px 5px darken($light, 10)
	
	> *
		transition transform 0.8s

.carousel-fade
	.carousel-control
		z-index 2
		background none
		
	.carousel-inner
		.active
			opacity 1
			
		.active.left, .active.right 
			left 0
			opacity 0
			z-index 1

		.next.left,	.prev.right
			opacity 1

		.item
			opacity 0
			transition-property opacity
			
			> img
				-webkit-filter blur(2px)
				width 100vw
				height auto
				margin 0 auto
			
			> .carousel-caption
				padding 100px
				height 100%
				width 100%
				background-color rgba(0,0,0,0.6)
				top 0
				left 0
				font-size 24px
				text-align left
				
				+below(1200px)
					font-size 20px
					
				+below(1024px)
					padding 50px
					font-size 16px
				
				> :first-child
					font-weight bold

@media all and (transform-3d), (-webkit-transform-3d) 
	
	.carousel-fade .carousel-inner >
		.item.next, .item.active.right
			opacity 0
			-webkit-transform translate3d(0, 0, 0)
			transform translate3d(0, 0, 0)

		.item.prev, .item.active.left 
			opacity 0
			-webkit-transform translate3d(0, 0, 0)
			transform translate3d(0, 0, 0)

		.item.next.left, .item.prev.right, .item.active 
			opacity 1
			-webkit-transform translate3d(0, 0, 0)
			transform translate3d(0, 0, 0)


