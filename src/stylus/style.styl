@import "rupture"
// @import "typographic"
@import "./_fonts.styl"
@import "./_colors.styl"


html, body
	margin 0
	padding 0
	box-sizing border-box
	
body
	font-family $font
	font-size 1.8em
	background-color $gray

#main
	background-color $red
	color #fff
	padding 40vh 0 40vh 0

+above(992px)
	.flex
		display flex

		.vertical
			display flex
			flex-direction column
			align-items center
			justify-content center
			text-align right
			width 100%
			
+below(768px)
	#search-pkmn-submit
		margin-top 50px

#panel-results
	border-radius 5px
	box-shadow: 5px 5px 5px darken($red, 20)
	
	> *
		transition transform 0.8s

#results
	color $dark
	text-align left